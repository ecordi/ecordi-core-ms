# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/core-ms

# NATS Connection
NATS_SERVERS=nats://localhost:4222
NATS_URL=nats://localhost:4222

# Redis Connection (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# Service Configuration
PORT=3001
NODE_ENV=development
BASE_URL=http://localhost:3001

# WhatsApp Cloud API Configuration
# Facebook App credentials for OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Default redirect URI for OAuth callbacks
OAUTH_REDIRECT_URI=http://localhost:3001/auth/facebook/callback

# HMAC Secret for state validation
OAUTH_STATE_SECRET=your_oauth_state_secret_key

# Outbox / JetStream Publisher
# Maximum number of retries before marking an event as failed
OUTBOX_MAX_RETRIES=8
# Base delay in ms for backoff (exponential)
OUTBOX_BASE_DELAY_MS=1000
# Backoff growth factor
OUTBOX_BACKOFF_FACTOR=4
# Max number of events to process per tick
OUTBOX_BATCH=100
# Optional: interval (ms) for the worker tick (default 2000)
# OUTBOX_INTERVAL_MS=2000
# Optional: number of hashing buckets for partitioned subjects (default 8)
# JS_BUCKETS=8
