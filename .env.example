# MongoDB Connection
# Either MONGO_URI or MONGODB_URI will be used
MONGODB_URI=mongodb://localhost:27017/core-ms
MONGO_URI=

# NATS Connection
NATS_SERVERS=nats://localhost:4222

# Redis Connection (BullMQ / caching)
# Prefer REDIS_URL. If not provided, REDIS_HOST/REDIS_PORT may be used elsewhere.
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# JWT / Session / Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=super_secret_session_key
CORE_SIGNING_SECRET=core_hmac_signing_secret
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Service Configuration
PORT=3000
NODE_ENV=development

# Facebook / WhatsApp OAuth flow (core -> wa-channel)
FACEBOOK_APP_ID=
FACEBOOK_REDIRECT_URI=http://localhost:3001/connections/callback
FACEBOOK_AUTH_URL=https://www.facebook.com/${META_VERSION}/dialog/oauth
FACEBOOK_SCOPES=whatsapp_business_messaging,whatsapp_business_management

# Webhook validation (Meta)
WHATSAPP_VERIFY_TOKEN=dev-verify-token
WHATSAPP_APP_SECRET=

# WhatsApp Cloud API Channel Configuration
WHATSAPP_CHANNEL_URL=http://localhost:3000
CORE_PUBLIC_BASE_URL=http://localhost:3000

# Files service (for media uploads from worker)
FILE_MS_BASE=http://localhost:5002
FILE_MS_PROVIDER=gcp
# Optional HMAC signature used by files-ms
FILE_MS_SIGNING_SECRET=
